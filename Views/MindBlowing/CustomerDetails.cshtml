    <table>
        <thead>
            <tr>
                <td>Name</td>
                <td>Customer ID</td>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.customer.Name</td>
                <td>@Model.customer.CustomerID</td>
            </tr>
        </tbody>
    </table>
</div>